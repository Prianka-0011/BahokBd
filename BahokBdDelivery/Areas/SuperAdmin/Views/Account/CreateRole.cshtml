@{
    ViewData["Title"] = "CreateRole";
    //  int i = 1;
    Layout = null;
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card mb-4">
            <div class="card-header ">
                <h2>Create Role</h2>
            </div>
            <div class="card-body">
                <form asp-action="CreateRole"  onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <div class="form-group">
                                @*<label class="text-success">@TempData["msg"]</label>*@
                                <label >Role Name :</label>
                                <input type="text" name="RoleName" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
            <div class="form-group row">
                <div class="col-md-4 offset-md-4 ">
                    <button type="submit" class="btn btn-sm btn-danger">Create Role</button>
                    @*<a asp-controller="Product" asp-action="Index" class="btn btn-warning  btn-sm ml-1">Back To List</a>*@
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>


@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js">
        $(function(){
            var create = '@TempData["create"]';
            if (create != null) {
                alertify.success(create);
            }
        });
    </script>
}