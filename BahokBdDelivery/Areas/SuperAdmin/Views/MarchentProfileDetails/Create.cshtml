                                    </div>
                                </div>
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label>Logo</label>
                                        <div class="custom-file">
                                            <input class="custom-file-input form-control ml-2" id="logoInp" type="file" asp-for="Logo" />
                                            <label class="custom-file-label">Choos file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="control-label"></label>
                                        <input asp-for="Phone" class="form-control" id="phone" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="BusinessName" class="control-label"></label>
                                        <input asp-for="BusinessName" class="form-control" />
                                        <span asp-validation-for="BusinessName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="BusinessLink" class="control-label"></label>
                                        <input asp-for="BusinessLink" class="form-control" />
                                        <span asp-validation-for="BusinessLink" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="BusinessAddress" class="control-label"></label>
                                        <input asp-for="BusinessAddress" class="form-control" />
                                        <span asp-validation-for="BusinessAddress" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="AccountName" class="control-label"></label>
                                        <input asp-for="AccountName" class="form-control" />
                                        <span asp-validation-for="AccountName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="AccountNumber" class="control-label"></label>
                                        <input asp-for="AccountNumber" class="form-control" />
                                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12 col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="PaymentTypeId" class="control-label"></label>
                                        <select asp-for="PaymentTypeId" class="form-control" id="Type"></select>
                                        <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 col-lg-6 ">
                                    <div class="form-group">
                                        <label asp-for="PaymentBankingId" class="control-label"></label>
                                        <select asp-for="PaymentBankingId" class="form-control" id="Organize"></select>
                                        <span asp-validation-for="PaymentBankingId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row" id="hideDiv">
                                <div class="col-md-12 col-12 col-lg 12">
                                    <div class="row">
                                        <div class="col-md-6 col-12 col-lg-6 ">
                                            <div class="form-group">
                                                <label asp-for="RoutingName" class="control-label"></label>
                                                <input asp-for="RoutingName" class="form-control" id="Route" />
                                                <span asp-validation-for="RoutingName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12 col-lg-6 ">
                                            <div class="form-group">
                                                <label asp-for="BranchId" class="control-label"></label>
                                                <select asp-for="BranchId" class="form-control" id="Branch"></select>
                                                <span asp-validation-for="BranchId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="col-md-6 col-12 col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="DateTime" class="control-label"></label>
                                            <input asp-for="DateTime" class="form-control" />
                                            <span asp-validation-for="DateTime" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>*@
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-info"><i class="fas fa-list-ul"></i></a>

                            </div>
                        </div>
                        <div class="col-12 col-lg-4 col-md-4">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <img id="img" src="#" style="height:100PX;width:100PX; " />
                                </div>
                                <div class="col-md-6 cpl-12">
                                    <img id="logo" src="#" style="height: 100PX; width: 100PX;" />
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function(){
            var error = '@ViewBag.error';
            if (error != null) {
                toastr.error(error);
            }

        });
    </script>
    <script type="text/javascript">
