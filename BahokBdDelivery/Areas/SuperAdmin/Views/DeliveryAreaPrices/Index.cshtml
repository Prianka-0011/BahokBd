@model IEnumerable<BahokBdDelivery.Models.DeliveryAreaPrices>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<div class="row">
    <div class="col-12 col-lg-8  col-md-8 ">
        <div class="card mb-4">
            <div class="card-header bg-info">
                <h2 class="">Manage Area & Price</h2>
                <a asp-action="Create" class=" text-white ">Create New</a>
            </div>
            <div class="card-body">
                <table class="table table-responsive table-striped">
                    <thead>
                        <tr>
                            <th>Serial No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Area)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BaseChargeAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IncreaseChargePerKg)
                            </th>
                            @*<th> @Html.DisplayNameFor(model => model.Status)</th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@i</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BaseChargeAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IncreaseChargePerKg)
                            </td>
                            @*@if (item.Status==true)
                            {
                                <td class="text-success">Enable</td>
                            }
                            else
                            {
                                <td class="text-warning">Disable</td>
                            }*@
                            <partial name="_ButtonPartial" model="@item.Id" />
                        </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>