@model IEnumerable<BahokBdDelivery.Models.DeliveryAreaPrices>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}
<div class="card mb-4">
    <div class="card-header ">
        <h2>Manage Branch</h2>
        <a onclick="showInPopup('@Url.Action("AddOrEdit","DeliveryAreaPrices",null,Context.Request.Scheme)','New Area' )" class="btn  text-black-50"><i class="fas fa-random"></i> New Area</a>
    </div>
    <div id="view-all" class="card-body">
        @await Html.PartialAsync("_ViewAllArea", Model)
    </div>
</div>

