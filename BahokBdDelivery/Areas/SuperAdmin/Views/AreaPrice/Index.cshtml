@model IEnumerable<BahokBdDelivery.Models.DeliveryAreaPrice>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}



<div class="row">
    <div class="col-md-12">
        <div class="card mb-4 mt-5">
            <div class="card-header bg-info ">
                <span class=" text-white font-weight-normal"><b>Manage Area Price </b></span>
                <a class="btn btn-info border-0 ml-auto" asp-action="Create" asp-controller="AreaPrice">Create New</a>
            </div>
            <div class="table-responsive">
                @if (Model != null)
                {

                    <table class=" table border-top-0 table-bordered m-3 table-striped font-weight-normal">
                        <thead style="font-size:12px">
                            <tr>
                                <th>#</th>
                                <th>Area Name</th>
                                <th>Delivery Cost</th>                              
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody style="font-size:11px">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Area</td>
                                    <td>@item.Price</td>
                                    <partial name="_ButtonPartial" model="@item.Id" />
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
